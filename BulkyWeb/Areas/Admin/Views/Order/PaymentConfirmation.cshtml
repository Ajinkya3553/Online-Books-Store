@model int

<div class="container row pt-4 mb-4">
	<div class="col-12 text-center">
		<h1 class="text-primary text-center">Payment Successful!</h1>
		Order number : @Model <br /><br />
		<img src="~/images/lawn_leaf.jpg" width="65%" />
	</div>
	<div class="col-12 text-center mb-5 pb-5" style="color:maroon">
		<br />
		<h6 class="mb-2">Payment has been applied successfully!</h6>
		<br />
		<a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" 
		class="btn btn-primary">Back to Order Details</a>
	</div>
</div>